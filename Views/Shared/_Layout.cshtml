<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
                @Scripts.Render("~/bundles/modernizr")
                <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

        @*<link href="~/Content/manu.css" rel="stylesheet" />*@
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="~/Images/g1.jpg" />
                    <p class="site-title">
                        </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                      
                        <nav>
                            <ul>
                                <li>@Html.ActionLink("Home", "ManWear", "Home") </li>
                                <li>
                                    <a>Man's Wear</a>
                                    <ul>
                                     
                                        <li>@Html.ActionLink("Men's Wear", "ManWear", "Home")</li> 
                                        <li>@Html.ActionLink("Men's Cloth", "ManWear", "Home")</li> 
                                        <li>@Html.ActionLink("Men's Foot Wear", "ManWear", "Home")</li> 
                                     
          
                                    </ul>
                                </li>
                                <li>
                                    <a>Weman's Wear</a>
                                    <ul><li>@Html.ActionLink("Women's Wear", "Womanwear", "Home")</li>
                                    <li>@Html.ActionLink("Women's Cloth", "Womanwear", "Home")</li>
                                    <li>@Html.ActionLink("Women's Foot Wear", "Womanwear", "Home")</li> 
                                        
                                    </ul>
                                </li>
                                <li>Children wear</>
                                    
                                        <ul>
                                            <li>@Html.ActionLink("Children's Wear", "Children", "Home")</li>
                                            <li>@Html.ActionLink("Children's Cloth", "Children", "Home")</li>
                                            <li>@Html.ActionLink("Children's Foot Wear", "Children", "Home")</li>
                                            
                                        </ul>
                                </li>
                            </ul>
                        </nav>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <img src="~/Images/cover.jpg" class="img-responsive" alt="Responsive image">
            </div>
        </div>
            <footer>
                <div class="content-wrapper">
                    <div class="float-left">
                        <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                    </div>
                </div>
            </footer>

            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
</body>
</html>
